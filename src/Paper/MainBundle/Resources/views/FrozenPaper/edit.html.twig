{% extends "PaperMainBundle::mini_layout.html.twig" %}

{% block content %}
    <div class="container">
        <span class="alert alert-info">Добавить бумагу в заказ:</span>
        <br style="clear: both"/>
        <br style="clear: both"/>
        <form method="POST">
            {{ form_widget(form) }}
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){

            var paper = $('#paper_mainbundle_frozenpaper_paper');
            $.ajax({
                type: "POST",
                url: "{{ path('paper_getcount') }}",
                data: "paper="+paper.val(),
                success: function(msg){
//                        alert('2');
                    $('#paper_mainbundle_frozenpaper_count').attr('max',msg);
                }
            });


            $('#paper_mainbundle_frozenpaper_paper').change(function(){
//                alert('1');
                var paper = $(this);
                $.ajax({
                    type: "POST",
                    url: "{{ path('paper_getcount') }}",
                    data: "paper="+paper.val(),
                    success: function(msg){
//                        alert('2');
                        $('#paper_mainbundle_frozenpaper_count').attr('max',msg);
                    }
                });
            });
        });
    </script>
{% endblock %}