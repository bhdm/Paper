{% extends "PaperMainBundle::mini_layout.html.twig" %}

{% block content %}
    <div class="container">
        <span class="alert alert-info">Добавить брак в заказ:</span>
        <br style="clear: both"/>
        <br style="clear: both"/>
        <form method="POST">
            {{ form_widget(form) }}
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('#paper_mainbundle_marriagepaper_submit').click(function(){
//                alert('1');
                var paper = $(this);
                $.ajax({
                    type: "POST",
                    url: "{{ path('paper_getcount') }}",
                    data: "paper="+paper.val(),
                    success: function(msg){
//                        alert('2');
                        if (msg < paper.val()){
                            alert('Нехватка бумаги на складе');
                        }
                    }
                });
            });
        });
    </script>
{% endblock %}