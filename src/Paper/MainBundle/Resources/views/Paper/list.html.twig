{% extends "PaperMainBundle::layout.html.twig" %}

{% block breadcrumb %}
    <a href="{{ path('paper_add') }}"><span class="btn btn-primary">Добавить</span></a>
    <br style="clear: both"/>
    <br style="clear: both"/>
{% endblock %}

{% block content %}
    <div class="well">
        <table class="table">
            <tr>
                <th>№</th>
                <th>Название</th>
                <th></th>
                <th>Количество</th>
                <th>Статус</th>
                <th class="setting">Инструменты</th>
            </tr>
            {% for item in pagination %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.title }}</td>
                    <td></td>
                    <td>{{ item.count }}</td>
                    <td>{{ item.enabledStr }}</td>
                    <td class="setting">
                        {% spaceless %}
                        {#<a href="{{ path('paper_addcount',{'id' : item.id}) }}"></a>#}

                            <button type="button" class="btn btn-default btn-bg" data-toggle="modal-popover" data-placement="left" data-target="#popupBottom">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                            &nbsp;
                            &nbsp;
                        <a href="{{ path('paper_edit',{'id' : item.id}) }}">
                            <button type="button" class="btn btn-default btn-bg">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </a>
                            &nbsp;
                            &nbsp;
                        <a href="{{ path('paper_remove',{'id' : item.id}) }}">
                            <button type="button" class="btn btn-default btn-bg">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </a>
                        {% endspaceless %}
                    </td>
                </tr>
            {% endfor%}
        </table>
        <div id="popupBottom" class="popover">
            <div class="arrow"></div>
            <h3 class="popover-title">Добавление бумаги</h3>
            <div class="popover-content">
                <form>
                    <input type="text" placeholder="Количество" class="form-control"><button class="btn btn-primary btn-sm">Добавить</button><button class="btn btn-danger btn-sm">Отмена</button>
                </form>
            </div>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('#popupBottom').modalPopover()
        });
    </script>
{% endblock %}