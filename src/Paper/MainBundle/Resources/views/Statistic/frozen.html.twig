{% extends "PaperMainBundle::layout.html.twig" %}

{% block breadcrumb %}
{% endblock %}

{% block content %}
    <div class="well">
        {% for order in orders %}
            <div class="panel panel-default">
                <div class="panel-heading"><span class="text-primary">Заказ: {{ order.title }}</span></div>
                <table class="table">
                    {% for paper in order.papers %}
                        {% if paper.status == 1 %}
                            <tr>
                                <td>{{ paper.paper }}</td>
                                <td style="width: 120px; text-align: right">{{ paper.count }}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}